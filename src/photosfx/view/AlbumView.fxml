<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="photosContainer" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="10" fx:controller="photosfx.controller.AlbumController">
    <!-- Header -->
    <children>
        <Label text="Album Name" fx:id="albumNameLabel" />
        <!-- Add Photo Button -->
        <Button fx:id="addPhotoButton" text="Add Photo" onAction="#addPhotoButtonClicked" />
        <!-- Photo Display Area -->
        <ScrollPane>
            <VBox fx:id="photosContainer" spacing="10" />
        </ScrollPane>
        <Button fx:id="slideShowButton" text="Start Slideshow" onAction="#slideShowButtonClicked"/>
        <Button fx:id="homeButton" text="Home" onAction="#homeButtonClicked"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#logoutButtonClicked" />
        <ImageView fx:id="photoDisplayImageView" />
    </children>
    

    

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
